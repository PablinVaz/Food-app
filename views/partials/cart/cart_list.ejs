<main>           
    <% for(let i = 0; i < cartList.length; i++) {%>
    <% let cart = cartList[i];%>
    <article>           
        <img src="<%= cart.img_url%>" alt="<%= cart.img_alt%>">
        <div class="plato-info">
            <p class="precio"><%= cart.price%> &euro;</p>
            <h5><%= cart.name%></h5>
            <p class="descripcion-plato"><%= cart.description%></p>
        </div>
        <div class="contadores">

            <form action="/delete_from_cart/<%= cart._id%>" method="get">
                
                <label for="qty"></label>
                <input type="text" class="conta-cantidad" name="qty" value="<%=cart.qty%>"/>
            
                <input class="importe" type="submit" value="Quitar"/>

            </form>

        </div>
    </article>
    <% } %>            
</main>